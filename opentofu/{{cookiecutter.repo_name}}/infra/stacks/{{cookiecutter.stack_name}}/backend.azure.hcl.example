# Azure Storage Backend Configuration
# Copy this file to backend.hcl and update with your values
# Usage: tofu init -backend-config=backend.hcl

resource_group_name  = "rg-terraform-state"
storage_account_name = "sttfstate1234567890"  # Replace with your storage account
container_name       = "tfstate"
key                  = "{{cookiecutter.stack_name}}/dev.tfstate"

# For CI/CD with OIDC (recommended)
use_oidc = true

# Alternative: Use storage account access key (less secure)
# access_key = "your-storage-account-key"

# Optional: Enable state locking
# use_azuread_auth = true
